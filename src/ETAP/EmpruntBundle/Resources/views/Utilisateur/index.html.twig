{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Utilisateur list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Login</th>
                <th>Matricule</th>
                <th>Motdepasse</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'id': entity.id }) }}">{{ entity.login }}</a></td>
                <td>{{ entity.matricule }}</td>
                <td>{{ entity.motdepasse }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('utilisateur_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('utilisateur_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('utilisateur_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
