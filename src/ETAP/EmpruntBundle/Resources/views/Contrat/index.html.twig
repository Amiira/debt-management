{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Contrat list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Datesignature</th>
                <th>Dureeremboursement</th>
                <th>Intervalleremboursement</th>
                <th>Libelle</th>
                <th>Marge</th>
                <th>Monnaieconvention</th>
                <th>Monnaiepayement</th>
                <th>Montant</th>
                <th>Nbrtirage</th>
                <th>Refcontrat</th>
                <th>Tauxdirecteur</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contrat_show', { 'id': entity.id }) }}">{{ entity.datesignature }}</a></td>
                <td>{{ entity.dureeremboursement }}</td>
                <td>{{ entity.intervalleremboursement }}</td>
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.marge }}</td>
                <td>{{ entity.monnaieconvention }}</td>
                <td>{{ entity.monnaiepayement }}</td>
                <td>{{ entity.montant }}</td>
                <td>{{ entity.nbrtirage }}</td>
                <td>{{ entity.refcontrat }}</td>
                <td>{{ entity.tauxdirecteur }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('contrat_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('contrat_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('contrat_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
