{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Offre</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Codeoffre</th>
                <td>{{ entity.codeoffre }}</td>
            </tr>
            <tr>
                <th>Dateoffre</th>
                <td>{{ entity.dateoffre|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Devise</th>
                <td>{{ entity.devise }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ entity.libelle }}</td>
            </tr>
            <tr>
                <th>Marge</th>
                <td>{{ entity.marge }}</td>
            </tr>
            <tr>
                <th>Montantpropose</th>
                <td>{{ entity.montantpropose }}</td>
            </tr>
            <tr>
                <th>Tauxdirecteur</th>
                <td>{{ entity.tauxdirecteur }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('offre') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('offre_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('offre_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
