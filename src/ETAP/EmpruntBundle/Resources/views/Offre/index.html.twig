{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Offre list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Codeoffre</th>
                <th>Dateoffre</th>
                <th>Devise</th>
                <th>Libelle</th>
                <th>Marge</th>
                <th>Montantpropose</th>
                <th>Tauxdirecteur</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('offre_show', { 'id': entity.id }) }}">{{ entity.codeoffre }}</a></td>
                <td>{% if entity.dateoffre %}{{ entity.dateoffre|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.devise }}</td>
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.marge }}</td>
                <td>{{ entity.montantpropose }}</td>
                <td>{{ entity.tauxdirecteur }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('offre_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('offre_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('offre_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
